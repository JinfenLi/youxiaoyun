body {
	background: #337b55;
}


p{
	text-align: center;
	font-size: 55px;
	color: white;
	font-family:"微软雅黑";
	margin-bottom: 150px;
	
}

img {
	margin: 0;
	padding: 0;
	width: 100%;
	display: block;
}

button {
	background: #337b55;
	display: block;
	width: 40%;
	height: 90px;
	border: 3px solid #fff;
	border-radius: 15px;
	margin: 50px auto 150px;
	font-size: 40px;
	cursor: pointer;
	color: #fff;
  font-weight: bold;
}