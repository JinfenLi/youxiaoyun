<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
        "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
    <title>帖子详情</title>
    <link rel="shortcut icon" href="resources/images/logo.png" />
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8"/>
   <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="resources/css/bootstrap.min.css">
    <script src="resources/js/jquery.min.js"></script>
    <style>
       span[class$="value"] {
            color: blue;
       } 

       .comment {
            text-align: right;
       }

       .images .col-xs-4 {
            height: 120px;
       }

      


    </style>
   
</head>
<body>
    <div class= "container"> 

        <div class="row user">           
            <div class="col-md-12 ">
                <span class="user-label">发帖人：</span> 
                <span class="user-value"></span>
            </div>
        </div>

        <div class="row title">
            <div class="col-md-12">
                <span class="time-label">发帖时间： </span>
                <span class="time-value"></span>
            </div>
        </div>
        
         <div class="row title">
            <div class="col-md-12">
                <span class="title-label">标题： </span>
                <span class="title-value"></span>
            </div>
        </div>
        
        <div class="row content">
            <div class="col-md-12">
                <span class="context-label">内容： </span>
                <span class="context-value">
                    
                </span>
            </div>
        </div>

        <div class="row images">
            <!-- 里面放图片 -->
        </div>

        <div class="row comment">
            <div class="col-md-12">
                <span class="comment-label">评论 </span>
                <span class="comment-value"></span>
                <span class="praise-label"> 点赞 </span>
                <span class="praise-value"></span>
            </div>
        </div>


    </div>

</body>
</html>
