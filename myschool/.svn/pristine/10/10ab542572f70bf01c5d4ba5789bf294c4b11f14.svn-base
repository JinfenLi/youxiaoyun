html, body {
  margin: 0;
  padding: 0;
  position:relative;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
}

img {
  padding: 0;
  margin: 0;
}

ul, li {
  margin: 0;
  padding: 0;
}

#bg {
  background: #FBEFD9 url('images/bg.jpg') no-repeat 50% 0%;
  text-align: center;
}

#header {
  width: 75%;
  margin-top: 5%;
  max-width: 688px;
}

#banner {
  width: 75%;
  max-width: 688px;
  margin: 0 auto;
  position: relative;
  overflow: hidden;
}

#bannerleft {
  width: 50%;
  position: absolute;
  left: -5px;
  margin-top: 21%;
}

#bannerright {
  width: 71%;
  float: right;
  margin-top: 8%;
}

#bannerbottom {
  width: 100%;
  margin-top: -32%;
  max-width: 750px;
} 

#main {
  width: 75%;
  max-width: 688px;
  margin: 0 auto;
  text-align: center;
  color: #fff;
}

#main p {
  color: #54483c;
  text-align: left;
}

#main input[type="radio"] {
  display: none;
}

.devicebtn {
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  display: inline-block;
  width: 47%;
  height: 8%;
  /*background: #18dacc;*/
  border: 2px solid #fff;
  border-radius: 999px;
  color: #fff;
  text-align: center;
  cursor: pointer;
  line-height: 40px;
  font-size: 90%;
  margin: 5% 0;
}

.devicebtn:nth-of-type(1) {
  margin-right: 4%;
}

#main input[type="radio"]:checked + label {
  border: none;
  background: #18dacc;
  font-weight: bold;
  color: #fff;
}

#main input[name="schoolName"] {
  margin: 0;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  width: 80%;
  height: 45px;
  border: none;
  border-radius: 4px 0 0 4px;
  float: left;
  background: #fff;
  font-size: 105%;
  padding-left: 20px;
  color: #54483c;
  outline: none;
}

#submit {
  padding: 0;
  margin: 0;
  width: 20%;
  height: 45px;
  float: right;
  border: none;
  border-radius: 0 4px 4px 0;
  background: #f39947;
  outline: none;
  cursor: pointer;
  color: #fff;
  font-size: 110%;
}

#result {
  margin: 75px 0 30px;
  min-height: 70px;
  list-style: none;
}

#result > p {
  text-align: center;
}

#result > li {
	box-sizing: border-box;
	background: #fff;
  	height: 45px;
  	color: #54483c;
  	line-height: 45px;
  	text-align: left;
  	padding-left: 20px;
  	cursor: pointer;
}

#result > li:hover {
	background: #F9F9C6;
	border-left: 5px #f39947 solid;
}

#result > li:first-child {
	border-radius: 4px 4px 0 0;
}

#result > li:last-child {
	border-radius: 0 0 4px 4px;
}

#download {
  width: 60%;
  height: 40px;
  border: none;
  border-radius: 4px;
  background: #f3900a;
  background: -moz-linear-gradient(top, #f3900a, #fb0707);
  background: -webkit-linear-gradient(top, #f3900a,#fb0707);  
  background: -o-linear-gradient(top, #f3900a, #fb0707); 
  color: #fff;
  font-size: 90%;
  margin: 0 0 50px;
  cursor: pointer;
  outline: none;
}

p#version {
  font-weight: bold;
  text-align: center;
  margin: 5px;
  font-size: 90%;
}

.fa {
  font-size: 130%;
  margin-right: 10px;
}

.triangle:after {
  content: '';
  border: 10px solid transparent;
  border-top-color: #f39947;
  margin-top: 33px;
  margin-left: -29px;
  position: absolute;
}

#layer {
  background: rgba(0, 0, 0, 0.6);
  display: none;
  position: absolute;
  z-index: 6;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  text-align: center;
}

#layerbouder {
  width: 80%;
  max-width: 688px;
  margin: 0 auto;
  position: relative;
}

#clickhere {
  float: right;
  width: 45%;
  margin-top: 13%;
}

#tiplabel {
  width: 100%;
  margin-top: 2%;
  max-width: 688px;
}

#labelheader {
  position: absolute;
  top: 10%;
  left: 45%;
  font-size: 120%;
  color: #7e7e7e;
}

#labelmain {
  text-align: left;
  position: absolute;
  top: 57%;
  left: 50%;
  margin-left: -40%;
  font-size: 0.8em;
  color: #7e7e7e;
  width: 80%
}

.fa-ellipsis-h {
  text-align: center;
  background-color: black;
  color: #fff;
  padding: 3px 4px 4px 4px;
  width: 20px;
  height: 20px;
  margin: 3px 5px 7px 5px;
}


@media (min-width: 300px) {
  #labelmain {
    font-size: 0.8em;
  }
  .fa-ellipsis-h {
    margin: 5px 5px 6px 5px;
    padding: 3px 4px 0px 4px;
  }
}

@media (min-width: 360px) {
  #labelmain {
    font-size: 1em;
  }
  .fa-ellipsis-h {
    margin: 5px 5px 6px 5px;
    padding: 3px 4px 3px 4px;
  }
}

@media (min-width: 420px) {
  #labelmain {
    font-size: 1.2em;
  }
  .fa-ellipsis-h {
    margin: 5px 5px 6px 5px;
    padding: 3px 4px 6px 4px;
  }
}

@media (min-width: 500px) {
  #labelmain {
    font-size: 1.4em;
  }
  .fa-ellipsis-h {
    margin: 5px 5px 6px 5px;
    padding: 3px 8px 11px 4px;
  }
}

@media (min-width: 560px) {
  #labelmain {
    font-size: 1.6em;
  }
  .fa-ellipsis-h {
    margin: 5px 5px 9px 5px;
    padding: 3px 13px 13px 6px;
  }
}

@media (min-width: 640px) {
  #labelmain {
    font-size: 1.8em;
  }
  .fa-ellipsis-h {
    margin: 5px 5px 9px 5px;
    padding: 1px 17px 17px 6px;
  }
}

