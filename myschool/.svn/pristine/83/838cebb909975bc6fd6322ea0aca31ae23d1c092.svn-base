		<dependency>
			<groupId>org.apache.shiro</groupId>
			<artifactId>shiro-core</artifactId>
			<version>1.2.3</version>
		</dependency>

		<!-- web application -->
		<dependency>
			<groupId>org.apache.shiro</groupId>
			<artifactId>shiro-web</artifactId>
			<version>1.2.3</version>
		</dependency>

		<!-- enable annotation -->
		<dependency>
			<groupId>org.apache.shiro</groupId>
			<artifactId>shiro-aspectj</artifactId>
			<version>1.2.3</version>
		</dependency>

		<!-- cache -->
		<dependency>
			<groupId>org.apache.shiro</groupId>
			<artifactId>shiro-ehcache</artifactId>
			<version>1.2.3</version>
		</dependency>

		<!-- native session validation <dependency> <groupId>org.apache.shiro</groupId> 
			<artifactId>shiro-quartz</artifactId> <version>1.2.3</version> </dependency> -->


		<!-- spring support -->
		<dependency>
			<groupId>org.apache.shiro</groupId>
			<artifactId>shiro-spring</artifactId>
			<version>1.2.3</version>
		</dependency>
		<!-- shiro end -->

		<dependency>
			<groupId>json</groupId>
			<artifactId>json</artifactId>
			<version>4.0</version>
		</dependency>

		<dependency>
			<groupId>com.baidu</groupId>
			<artifactId>baidu</artifactId>
